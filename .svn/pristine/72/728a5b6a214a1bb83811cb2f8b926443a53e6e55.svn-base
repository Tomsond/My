public class ImageRecordServiceImpl implements ImageRecordService
{
	
	private ImageRecordDao imageRecordDao;
	
	public void setImageRecordDao(ImageRecordDao imageRecordDao)
	{
		this.imageRecordDao = imageRecordDao;
	}
	
	@Override
	public ImageRecordModel addOrUpdate(ImageRecordModel imageRecordModel)
	{
		int updateTotal = imageRecordDao.updateByBIdAndNIdAndCode(imageRecordModel);
		if (0 == updateTotal)
		{
			imageRecordModel = imageRecordDao.add(imageRecordModel);
		}
		return imageRecordModel;
	}
	
	@Override
	public Long queryCountByCodes(List<String> mediaCodes, Long businessId, String nodeId)
	{
		return imageRecordDao.queryCountByCodes(mediaCodes, businessId, nodeId);
	}

    @Override
    public List<ImageRecordModel> queryByParams(ImageRecordModel imageRecordModel)
    {
        
        return imageRecordDao.queryByParams(imageRecordModel);
    }
}
