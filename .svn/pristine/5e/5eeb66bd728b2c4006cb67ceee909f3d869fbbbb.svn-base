public class Function1004489 extends ISMPBaseFunction
{
	
	private Long userId;
	
	@Override
	public ResultVo execute() throws Exception
	{
		initVar();
		UserInfoService userInfoService = (UserInfoService) SpringHelper.getBean(BusinessServiceBeanIdConstants.SERVICE_ID_USERINFO);
		UserInfoVo userAccountPwd = userInfoService.queryAndCheckUserByUserIdAndType(userId, ThirdInterfaceConstant.USER_ACCOUNT_TYPE_ZQ);
		DataRow thirdInput = DataFormatUtils.packThirdInput(userAccountPwd);
		ThirdInterface thirdInterface = SpringHelper.getBean(ThirdDictionaryConstants.SERVICE_ID_THIRDINTERFACE, ThirdInterface.class);
		DataRow fundRisk = thirdInterface.queryFundRiskInfo(thirdInput);
		DataRow result = packResult(fundRisk);
		ResultVo resultVo = new ResultVo();
		resultVo.setErrorNo(DictionaryConstants.INVOKE_FUNCTION_SUCCESS);
		resultVo.setErrorMsg(DictionaryConstants.INVOKE_FUNCTION_SUCCESSMSG);
		resultVo.setResult(result);
		return resultVo;
	}
	
	private DataRow packResult(DataRow fundRisk)
	{
		DataRow result = new DataRow();
		result.set("status", fundRisk.getString("status"));//-1 已过期，0 未提交过 1-正常
		result.set("message", fundRisk.getString("message"));
		return result;
	}
	
	/**
	 * @描述：获取业务入参
	 * @作者：刘恺
	 * @时间：2016年8月23日 下午8:55:24
	 */
	private void initVar()
	{
		userId = this.formatLongParam(this.getAndCheckBlankStrParam("user_id", ErrorCodeCheckInput.BLANK_USERID), ErrorCodeCheckInput.LONG_FORMAT_ERROR);
	}
	
}
