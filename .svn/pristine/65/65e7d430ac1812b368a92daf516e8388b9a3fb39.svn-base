public class ImageInformationServiceImpl implements ImageInformationService
{
	
	private ImageInformationDao imageInformationDao;
	
	public void setImageInformationDao(ImageInformationDao imageInfomationDao)
	{
		this.imageInformationDao = imageInfomationDao;
	}
	
	@Override
	public ImageInformationModel add(ImageInformationModel imageInformationModel)
	{
		return imageInformationDao.add(imageInformationModel);
	}
	
	@Override
	public ImageInformationModel addOrUpdate(ImageInformationModel imageInformationModel)
	{
		int count = imageInformationDao.updateByBusinessIdAndNodeId(imageInformationModel);
		if (count < 1)
		{
			imageInformationDao.add(imageInformationModel);
		}
		return imageInformationModel;
	}
	
	@Override
	public List<ImageInformationModel> queryByParams(Long businessId, String nodeId)
	{
		return imageInformationDao.queryByParams(businessId, nodeId);
	}
}
