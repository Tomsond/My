	private static ImageUploadService imageUploadService = SpringHelper.getBean(BusinessServiceBeanIdConstants.SERVICE_ID_IMAGEUPLOAD, ImageUploadService.class);
	
	/**
	 * @描述：校验影像节点照片是否全部上传
