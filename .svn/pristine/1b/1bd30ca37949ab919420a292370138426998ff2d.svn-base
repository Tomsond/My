public class Function1004477 extends ISMPBaseFunction
{
	
	private long userId;//用户ID
	
	@Override
	public ResultVo execute() throws Exception
	{
		initVar();
		ResultVo resultVo = new ResultVo();
		
		BillService billService = (BillService) SpringHelper.getBean(BusinessServiceBeanIdConstants.SERVICE_ID_BILL);
		DataRow billInfo = billService.getEamilBillInfo(userId);
		DataRow result = packResult(billInfo);
		resultVo.setResult(result);
		resultVo.setErrorNo(DictionaryConstants.INVOKE_FUNCTION_SUCCESS);
		resultVo.setErrorMsg(DictionaryConstants.INVOKE_FUNCTION_SUCCESSMSG);
		return resultVo;
	}
	
	private DataRow packResult(DataRow billInfo)
	{
		DataRow result = new DataRow();
		if (billInfo == null)
		{
			result.set("query_flag", DictionaryConstants.BOL_FALSE);
			return result;
		}
		result.set("query_flag", DictionaryConstants.BOL_TRUE);
		result.set("user_id", userId);
		result.set("email", billInfo.getString("email"));
		result.set("status", billInfo.getString("status"));
		return result;
	}
	
	private void initVar()
	{
		userId = this.formatLongParam(this.getAndCheckBlankStrParam("user_id", ErrorCodeCheckInput.BLANK_USERID), ErrorCodeCheckInput.LONG_FORMAT_ERROR);
	}
}
