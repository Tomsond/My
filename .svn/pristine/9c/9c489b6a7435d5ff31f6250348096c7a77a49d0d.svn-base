public class ChoiceAccountConfigDaoImpl extends ISMPBaseDao implements ChoiceAccountConfigDao
{
	
	@Override
	public ChoiceAccountConfigModel queryByNodeId(String nodeId)
	{
		StringBuilder sql = new StringBuilder();
		sql.append("SELECT ID,NODE_ID,SHOW_ERROR_ACCOUNT,SHOW_OPEN_ACCOUNT,SHOW_DEALERROR_LINK FROM ");
		sql.append(BusinessTableConstants.T_ISMP_CHOICE_ACCOUNT_CONFIG);
		sql.append(" WHERE NODE_ID = ?");
		DataRow queryResult = this.getJdbcTemplate().queryMap(sql.toString(), new Object[] { nodeId });
		return ModelUtil.packInfo(queryResult, ChoiceAccountConfigModel.class);
	}
	
}
