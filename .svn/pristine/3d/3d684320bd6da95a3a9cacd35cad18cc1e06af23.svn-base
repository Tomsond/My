public abstract class BaseTest extends TestCase
{
	
	private SimpleContextImpl context = null;
	
	private SimpleRequestImpl request = null;
	
	SimpleResponseImpl response = null;
	
	public BaseTest()
	{
		context = new SimpleContextImpl();
		request = new SimpleRequestImpl();
		response = new SimpleResponseImpl();
		context.setRequest(request);
		context.setResponse(response);
	}
	
	protected SimpleContextImpl getContext()
	{
		return context;
	}
	
	protected SimpleRequestImpl getRequest()
	{
		return request;
	}
	
	protected SimpleResponseImpl getResponse()
	{
		return response;
	}
	
	@Override
	protected void setUp() throws Exception
	{
		super.setUp();
		EventSink.onStart();
	}
	
	@Override
	protected void tearDown() throws Exception
	{
		super.tearDown();
	}
}
