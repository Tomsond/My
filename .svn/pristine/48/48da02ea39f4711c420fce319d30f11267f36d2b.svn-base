public class SmsModelDaoImpl extends ISMPBaseDao implements SmsModelDao
{
	
	@Override
	public SmsModelModel queryModelByType(String smsType, String sendType)
	{
		StringBuffer sql = new StringBuffer("SELECT ID,SMS_TYPE,SMS_MESSAGE,STATE,SMS_LEVEL,SMS_SEND_TYPE FROM ");
		sql.append(BusinessTableConstants.T_ISMP_SMS_MODEL);
		sql.append(" WHERE SMS_TYPE = ? AND SMS_SEND_TYPE = ?");
		DataRow dataRow = this.getJdbcTemplate().queryMap(sql.toString(), new Object[] { smsType, sendType });
		return ModelUtil.packInfo(dataRow, SmsModelModel.class);
	}
	
}
