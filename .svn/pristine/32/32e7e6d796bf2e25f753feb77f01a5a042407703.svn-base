public class BusiTypeDefineDaoImpl extends ISMPBaseDao implements BusiTypeDefineDao
{
	
	@Override
	public BusiTypeDefineModel queryByParams(String businessType)
	{
		StringBuilder sql = new StringBuilder();
		sql.append("SELECT BTYPE_ID,BTYPE_NAME,BUSINESS_TYPE,REMARK FROM ");
		sql.append(BusinessTableConstants.T_ISMP_BUSITYPE_DEFINE);
		sql.append(" WHERE BUSINESSTYPE = ?");
		DataRow queryResult = this.getJdbcTemplate().queryMap(sql.toString(), new Object[] { businessType });
		return ModelUtil.packInfo(queryResult, BusiTypeDefineModel.class);
	}
	
}
