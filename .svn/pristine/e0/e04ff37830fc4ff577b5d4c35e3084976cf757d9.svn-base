public class Function1004135 extends ISMPBaseFunction
{
	
	private ThirdBankService thirdBankService;
	
	private String bindtype;// 三方绑定方式
	
	private String ispwd;//是否需要密码
	
	@Override
	public ResultVo execute() throws InvokeException
	{
		checkInput();
		ResultVo resultVo = new ResultVo();
		
		thirdBankService = SpringHelper.getBean(ThirdBankContants.SERVICE_ID_THIRDBANK, ThirdBankService.class);
		
		//从数据库获取所有银行卡信息
		List<ThirdBankInfoVo> bankCardInfoList = thirdBankService.queryByBindTypeAndIsPwd(bindtype, ispwd);
		
		resultVo.setResult(bankCardInfoList);
		resultVo.setErrorNo(DictionaryConstants.INVOKE_FUNCTION_SUCCESS);
		resultVo.setErrorMsg(DictionaryConstants.INVOKE_FUNCTION_SUCCESSMSG);
		return resultVo;
	}
	
	private void checkInput() throws InvokeException
	{
		bindtype = this.getStrParameter("bindtype");
		ispwd = this.getStrParameter("ispwd");
	}
}