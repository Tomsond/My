public class FlowNodeServiceImpl implements FlowNodeService
{
	
	private FlowNodeDao flowNodeDao;
	
	public void setFlowNodeDao(FlowNodeDao flowNodeDao)
	{
		this.flowNodeDao = flowNodeDao;
	}
	
	@Override
	public FlowNodeModel add(FlowNodeModel flowNodeModel)
	{
		return flowNodeDao.add(flowNodeModel);
	}
	
	@Override
	public int update(FlowNodeModel flowNodeModel)
	{
		return flowNodeDao.update(flowNodeModel);
	}
	
	@Override
	public FlowNodeModel queryByBusinessIdAndNodeId(Long businessId, String nodeId)
	{
		return flowNodeDao.queryByBusinessIdAndNodeId(businessId, nodeId);
	}
	
	@Override
	public FlowNodeModel addOrUpdate(FlowNodeModel flowNodeModel)
	{
		FlowNodeModel queryFlowNodeModel = queryByBusinessIdAndNodeId(flowNodeModel.getBusinessId(), flowNodeModel.getNodeId());
		if (queryFlowNodeModel == null)
		{
			return add(flowNodeModel);
		}
		update(flowNodeModel);
		return queryFlowNodeModel;
	}

    @Override
    public List<FlowNodeModel> queryByBusinessId(Long businessId)
    {
        return flowNodeDao.queryByBusinessId(businessId);
    }
}
