public class FundInfoDaoImpl extends ISMPBaseDao implements FundInfoDao
{
	
	@SuppressWarnings("unchecked")
	@Override
	public List<FundInfo> queryAll()
	{
		StringBuffer sql = new StringBuffer("select id,name,first_spell,state,agree_type,tacode  from ");
		sql.append(JjConstants.T_ISMP_FUND_INFO);
		sql.append(" where state = '1' ");
		List<DataRow> dataRow = getJdbcTemplate().query(sql.toString());
		return ModelUtil.packList(dataRow, FundInfo.class);
	}
}
