public class VideoConfigDaoImpl extends ISMPBaseDao implements VideoConfigDao
{
	
	@Override
	public VideoConfigModel queryByNodeId(String nodeId)
	{
		StringBuilder sql = new StringBuilder();
		sql.append("SELECT ID,NODE_ID,STARTUP_DXSP,STARTUP_SXSP,DEFAULT_TYPE,DXSP_STARTTIME,DXSP_ENDTIME,SXSP_STARTTIME,SXSP_ENDTIME,");
		sql.append("DXSP_NOTICE,DXSP_NEEDCHECK,SXSP_NEEDCHECK,DXSP_SAVESITE,SXSP_SAVESITE FROM ");
		sql.append(BusinessTableConstants.T_ISMP_VIDEO_CONFIG);
		sql.append(" WHERE NODE_ID = ?");
		DataRow queryResult = this.getJdbcTemplate().queryMap(sql.toString(), new Object[] {});
		return ModelUtil.packInfo(queryResult, VideoConfigModel.class);
	}
	
}
