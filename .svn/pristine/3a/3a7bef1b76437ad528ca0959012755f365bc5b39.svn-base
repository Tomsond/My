public class UserLoginLogServiceImpl implements UserLoginLogService
{
	
	private UserloginLogDao userloginLogDao;
	
	public void setUserloginLogDao(UserloginLogDao userloginLogDao)
	{
		this.userloginLogDao = userloginLogDao;
	}
	
	@Override
	public UserLoginLogModel add(Long userId, String logingType, String opSource)
	{
		UserLoginLogModel userLoginLogModel = new UserLoginLogModel();
		userLoginLogModel.setUserId(userId);
		userLoginLogModel.setOpSource(opSource);
		userLoginLogModel.setClientId(logingType);
		userLoginLogModel = userloginLogDao.add(userLoginLogModel);
		return userLoginLogModel;
	}
	
	public UserLoginLogModel addLog(UserLoginLogModel userLoginLogModel)
	{
		userLoginLogModel = userloginLogDao.add(userLoginLogModel);
		return userLoginLogModel;
	}
	
	@Override
	public Date queryLastLogDate(Long userId)
	{
		return userloginLogDao.queryLastLogDate(userId);
	}
	
}
