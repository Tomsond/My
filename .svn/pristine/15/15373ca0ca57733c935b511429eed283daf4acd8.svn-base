public class Function1004904 extends ISMPBaseFunction
{
	
	private Long userId;//用户编号
	
	private String clientId;//客户号
	
	private String fundAccount;//资金帐号
	
	public ResultVo execute() throws Exception
	{
		initVar();
		ResultVo resultVo = new ResultVo();
		
		//同步资金帐号
		UserInfoService userInfoService = SpringHelper.getBean(BusinessServiceBeanIdConstants.SERVICE_ID_USERINFO, UserInfoService.class);
		ThirdInterface thirdInterface = SpringHelper.getBean(ThirdDictionaryConstants.SERVICE_ID_THIRDINTERFACE, ThirdInterface.class);
		List<DataRow> zjAccountList = null;
		if (!StringUtils.isBlank(clientId))
		{
			//			DataRow userAccountPwd = userInfoService.queryThirdUserInfo(client_id, user_id);
			//			DataRow queryInput = DataFormatUtils.packThirdInput(userAccountPwd);
			//			if (userAccountPwd == null)
			//			{
			//				throw new BusinessException(ErrorCode.NOTEXIST_USER, "用户不存在");
			//			}
			//			List<DataRow> zjAccountList = thirdInterface.queryZJAccount(queryInput);
		}
		else if (!StringUtils.isBlank(fundAccount))
		{
			UserInfoVo userInfoVo = userInfoService.queryAndCheckUserByUserIdAndAccount(userId, fundAccount);
			DataRow thirdInput = DataFormatUtils.packThirdInput(userInfoVo);
			zjAccountList = thirdInterface.queryZJAccount(thirdInput);
		}
		if (zjAccountList != null && !zjAccountList.isEmpty())
		{
			DataRow accountList = userInfoService.addOrUpdateUserAccount(zjAccountList, userId);
			resultVo.setResult(accountList);
		}
		
		//同步首次交易日
		/*UserInfoVo userInfo = userInfoService.queryAndCheckUserByUserIdAndType(userId, ThirdInterfaceConstant.USER_ACCOUNT_TYPE_ZQ);
		DataRow thirdInput = DataFormatUtils.packThirdInput(userInfo);
		thirdInterface.getFirsTransactionData(thirdInput);*/
		
		resultVo.setErrorNo(DictionaryConstants.INVOKE_FUNCTION_SUCCESS);
		resultVo.setErrorMsg(DictionaryConstants.INVOKE_FUNCTION_SUCCESSMSG);
		return resultVo;
	}
	
	/**
	 * @描述：初始化入参
	 * @作者：刘恺
	 * @时间：2016年9月9日 下午2:08:07
	 */
	private void initVar()
	{
		userId = this.formatLongParam(this.getAndCheckBlankStrParam("user_id", ErrorCodeCheckInput.BLANK_USERID), ErrorCodeCheckInput.LONG_FORMAT_ERROR);
		fundAccount = this.getStrParameter("zj_account");
		clientId = this.getStrParameter("client_id");
	}
	
}