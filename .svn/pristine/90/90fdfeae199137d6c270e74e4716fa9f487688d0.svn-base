package com.thinkive.fxc.ismp.bus.base.util;

import java.util.Calendar;
import java.util.Date;
public class DateUtils
{
	
	/**
	 * 描述：间隔天数（过0点算一天，不按照24小时计算）
	 * @param date1
	 * @param date2
	 * @return 天数
	 */
	public static Long getDateDiff(Date date1, Date date2)
	{
		Calendar calendar1 = Calendar.getInstance();
		calendar1.setTime(date1);
		calendar1.set(Calendar.HOUR_OF_DAY, 0);
		calendar1.set(Calendar.MINUTE, 0);
		calendar1.set(Calendar.SECOND, 0);
		
		Calendar calendar2 = Calendar.getInstance();
		calendar2.setTime(date2);
		calendar2.set(Calendar.HOUR_OF_DAY, 0);
		calendar2.set(Calendar.MINUTE, 0);
		calendar2.set(Calendar.SECOND, 0);
		Long days = (calendar1.getTimeInMillis() - calendar2.getTimeInMillis()) / 86400000L;
		return days;
	}
	
	/**
	 * 描述：间隔小时（）
	 * @param date1
	 * @param date2
	 * @return 天数
	 */
	public static Long getHourDiff(Date date1, Date date2)
	{
		long time1 = date1.getTime();
		long time2 = date2.getTime();
		long diff = time2 - time1;
		Long diff_hour = new Long(diff / 3600000L);
		return diff_hour;
	}
	
	/**
	 * 描述：间隔天数（过0点算一天，不按照24小时计算）
	 * @param date1
	 * @param date2
	 * @return 天数
	 */
	public static int getYearDiff(Date date1, Date date2)
	{
		Calendar calendar1 = Calendar.getInstance();
		calendar1.setTime(date1);
		calendar1.set(Calendar.HOUR_OF_DAY, 0);
		calendar1.set(Calendar.MINUTE, 0);
		calendar1.set(Calendar.SECOND, 0);
		
		Calendar calendar2 = Calendar.getInstance();
		calendar2.setTime(date2);
		calendar2.set(Calendar.HOUR_OF_DAY, 0);
		calendar2.set(Calendar.MINUTE, 0);
		calendar2.set(Calendar.SECOND, 0);
		
		Calendar calendar3 = Calendar.getInstance();
		long millis = calendar1.getTimeInMillis() - calendar2.getTimeInMillis();
		calendar3.setTimeInMillis(millis);
		int years = calendar3.get(Calendar.YEAR) - 1970;
		return years;
	}
}
