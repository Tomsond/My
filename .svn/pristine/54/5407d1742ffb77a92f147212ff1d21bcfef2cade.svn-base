        <snapshotRepository>
            <id>snapshots</id>
            <name>公司产品snapshot包</name>
            <url>${snapshots.url}</url>
        </snapshotRepository>
    </distributionManagement>
    <scm>
        <developerConnection>scm:svn:${svn.url}/${project.artifactId}/trunk</developerConnection>
    </scm>
</project>