public class CertCofferTBASSServiceImpl implements CertCofferTBASSService
{
	
	/**
	* @描述：根据功能号获取证书相关接口结果集
	*/
	@SuppressWarnings("rawtypes")
	private Result getCertResult(int funcNo, Map param)
	{
		Client client = new Client(SystemConstants.TG_BUS);
		Result result = client.getResult(funcNo, param);
		return result;
	}
	
	@Override
	public Result encodePWD(DataRow dataRow)
	{
		DataRow input = new DataRow();
		input.set("password", dataRow.getString("password"));
		return getCertResult(30103, input);
	}
	
	@Override
	public Result signByZD(DataRow input)
	{
		return getCertResult(30102, input);
	}
	
	@Override
	public Result signByZJ(DataRow input)
	{
		return getCertResult(30105, input);
	}
	
	@Override
	public Result reSetCertPwdZJ(DataRow input)
	{
		return getCertResult(30110, input);
	}
	
	@Override
	public Result reSetCertPwdZD(DataRow input)
	{
		return getCertResult(30109, input);
	}
	
}
