public class Function1004261 extends ISMPBaseFunction
{
	
	private Long userId;
	
	private String fundAccount;

	private String subjectNo; //主题编号：khzzhfwj
	
	
	@Override
	public ResultVo execute() throws Exception
	{
		initVar();
		UserInfoService userInfoService = SpringHelper.getBean(BusinessServiceBeanIdConstants.SERVICE_ID_USERINFO, UserInfoService.class);
		UserInfoVo userInfoVo = userInfoService.queryAndCheckUserByUserIdAndAccount(userId, fundAccount);
		
        if (userInfoVo == null)
        {
            throw new BusinessException(ErrorCodeSystem.NOTEXIST_USER, "用户不存在");
        }
        
        KhzzhfService hfService = SpringHelper.getBean(KhzzhfConstants.SERVER_ID_KHZZHF, KhzzhfService.class);
        List<DataRow> question = hfService.queryAllBySubjectNo(subjectNo);
        
		ResultVo resultVo = new ResultVo();
		resultVo.setResult(question);
		resultVo.setErrorNo(DictionaryConstants.INVOKE_FUNCTION_SUCCESS);
        resultVo.setErrorMsg(DictionaryConstants.INVOKE_FUNCTION_SUCCESSMSG);
		return resultVo;
	}
	
	/**
	 * @描述：获取业务入参
	 * @作者：刘恺
	 * @时间：2016年8月23日 下午8:55:24
	 */
	private void initVar()
	{
		userId = this.formatLongParam(this.getAndCheckBlankStrParam("user_id", ErrorCodeCheckInput.BLANK_USERID), ErrorCodeCheckInput.LONG_FORMAT_ERROR);
		fundAccount = this.getAndCheckBlankStrParam("fundAccount", ErrorCodeCheckInput.BLANK_FUNDACCOUNT);
		subjectNo = this.getAndCheckBlankStrParam("subject_no", ErrorCodeCheckInput.BLANK_SUBJECT_NO);
	}
}
