public class SimilarityConfigDaoImpl extends ISMPBaseDao implements SimilarityConfigDao
{
    
    @Override
    public SimilarityConfigModel add(SimilarityConfigModel similarityConfigModel) throws Exception
    {
        String id = this.getSeqValue(SystemConstants.DB_ISMP,BaseTableConstants.T_FXC_ONEWAYVIDEO_LOG);
        similarityConfigModel.setId(Long.valueOf(id));
        similarityConfigModel.setCreateDate(new Date());
        this.getJdbcTemplate().insert(BaseTableConstants.T_FXC_ONEWAYVIDEO_LOG, similarityConfigModel);
        return similarityConfigModel;
    }
    
    @Override
    public int update(SimilarityConfigModel similarityConfigModel) throws Exception
    {
        Long id = similarityConfigModel.getId();
        similarityConfigModel.setUpdateDate(new Date());
        return this.getJdbcTemplate().update(BaseTableConstants.T_FXC_ONEWAYVIDEO_LOG, similarityConfigModel, "ID", id);
    }
    
    @Override
    public SimilarityConfigModel queryByParams(String type, String status) throws Exception
    {
        StringBuilder sql = new StringBuilder();
        List<String> paramList = new ArrayList<String>();
        sql.append(" SELECT ID, SIMILARITY, STATUS, TYPE, CREATE_DATE, CREATE_BY, UPDATE_DATE, UPDATE_BY");
        sql.append(" FROM ");
        sql.append(BaseTableConstants.T_FXC_ONEWAYVIDEO_LOG);
        sql.append(" WHERE 1=1 ");
        if ( StringUtil.isNotEmpty(type) )
        {
            sql.append(" AND TYPE = ? ");
            paramList.add(type);
        }
        if ( StringUtil.isNotEmpty(status) )
        {
            sql.append(" AND STATUS = ? ");
            paramList.add(status);
        }
        DataRow queryResult = this.getJdbcTemplate().queryMap(sql.toString(), paramList.toArray());
        return ModelUtil.packInfo(queryResult, SimilarityConfigModel.class);
    }
    
}
