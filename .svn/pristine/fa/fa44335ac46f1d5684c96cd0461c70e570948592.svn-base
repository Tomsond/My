public class Function1004188 extends ISMPBaseFunction
{
	
	private Long userId;
	
	private ThirdInterface thirdInterface;
	
	@Override
	public ResultVo execute() throws Exception
	{
		initVar();
		
		UserInfoService userInfoService = SpringHelper.getBean(BusinessServiceBeanIdConstants.SERVICE_ID_USERINFO, UserInfoService.class);
		UserInfoVo userAccountPwd = userInfoService.queryAndCheckUserByUserIdAndType(userId, ThirdInterfaceConstant.USER_ACCOUNT_TYPE_ZQ);
		
		thirdInterface = SpringHelper.getBean(ThirdDictionaryConstants.SERVICE_ID_THIRDINTERFACE, ThirdInterface.class);
		DataRow thirdInput = DataFormatUtils.packThirdInput(userAccountPwd);
		//JjBusinessService businessService = SpringHelper.getBean(JjConstants.SERVICE_ID_JJBUSINESS, JjBusinessService.class);
		//查询可以开通的全部基金公司列表
		//List<FundInfo> fundInfoList = businessService.queryAllFundInfo();
		thirdInterface=SpringHelper.getBean(ThirdDictionaryConstants.SERVICE_ID_THIRDINTERFACE, ThirdInterface.class);
		List<FundInfo> infos=ModelUtil.packList(thirdInterface.queryJJdetailInfoList(), FundInfo.class);
		
		//查询用户已开通的基金账户
		List<DataRow> openedFundAccount = thirdInterface.openedFundAccountList(thirdInput);
		Map<String, DataRow> openedFundAccountMap = new HashMap<String, DataRow>();
		if (openedFundAccount != null && openedFundAccount.size() > 0)
		{
			for (DataRow openedData : openedFundAccount)
			{
				openedFundAccountMap.put(openedData.getString("ta_code"), openedData);
			}
		}
		if (infos != null && infos.size() > 0)
		{
			for (FundInfo fundInfo : infos)
			{
				fundInfo.set("open_flag", DictionaryConstants.BOL_FALSE);
				fundInfo.set("ta_acct", "");//基金帐号
				fundInfo.set("open_date", "");//开立日期 yyyy-MM-dd
				String tacode = fundInfo.getTacode();
				if (openedFundAccountMap.containsKey(tacode))
				{
					DataRow openedData = openedFundAccountMap.get(fundInfo.getTacode());
					fundInfo.set("open_flag", DictionaryConstants.BOL_TRUE);
					fundInfo.set("ta_acct", openedData.getString("ta_acct"));//基金帐号
					fundInfo.set("open_date", openedData.getString("open_date"));//开立日期 yyyy-MM-dd
				}
			}
		}
		ResultVo resultVo = new ResultVo();
		resultVo.setResult(infos);
		resultVo.setErrorNo(DictionaryConstants.INVOKE_FUNCTION_SUCCESS);
		resultVo.setErrorMsg(DictionaryConstants.INVOKE_FUNCTION_SUCCESSMSG);
		return resultVo;
	}
	
	/**
	 * @描述：获取业务入参
	 * @作者：刘恺
	 * @时间：2016年8月23日 下午8:55:24
	 */
	private void initVar()
	{
		userId = this.formatLongParam(this.getAndCheckBlankStrParam("user_id", ErrorCodeCheckInput.BLANK_USERID), ErrorCodeCheckInput.LONG_FORMAT_ERROR);
	}
}
