public class ImageTypeConfigDaoImpl extends ISMPBaseDao implements ImageTypeConfigDao
{
	
	@Override
	public ImageTypeConfigModel queryByNodeId(String nodeId)
	{
		StringBuilder sql = new StringBuilder();
		sql.append("SELECT ID,NODE_ID,TYPE_ID,THIRD_MEDIA_CODE,RECOGNI_TYPE,NEED_OCR FROM ");
		sql.append(BusinessTableConstants.T_ISMP_IMAGE_IMAGETYPE_CONFIG);
		sql.append(" WHERE NODE_ID = ?");
		DataRow queryResult = this.getJdbcTemplate().queryMap(sql.toString(), new Object[] { nodeId });
		return ModelUtil.packInfo(queryResult, ImageTypeConfigModel.class);
	}
	
}
