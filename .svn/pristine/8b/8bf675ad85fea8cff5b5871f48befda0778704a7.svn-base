public class SurveyAnswerResultServiceImpl extends BusinessCommonServiceImpl implements SurveyAnswerResultService
{
	
	private SurveyAnswerResultDao surveyAnswerResultDao;
	
	public void setSurveyAnswerResultDao(SurveyAnswerResultDao surveyAnswerResultDao)
	{
		this.surveyAnswerResultDao = surveyAnswerResultDao;
	}
	
	@Override
	public void addOrUpdateAnswer(Long businessId, Long subId, String nodeId, String subValue, String valueLevel, String valueName) throws Exception
	{
		SurveyAnswerResultModel surveyAnswerResultModel = new SurveyAnswerResultModel();
		surveyAnswerResultModel.setBusinessId(businessId);
		surveyAnswerResultModel.setNodeId(nodeId);
		surveyAnswerResultModel.setSubId(subId);
		surveyAnswerResultModel.setSubValue(subValue);
		surveyAnswerResultModel.setValueLevel(valueLevel);
		surveyAnswerResultModel.setValueName(valueName);
		int count = surveyAnswerResultDao.update(surveyAnswerResultModel);
		if (0 == count)
		{
			surveyAnswerResultDao.add(surveyAnswerResultModel);
		}
	}
	
	@Override
	public List<SurveyAnswerResultModel> queryByParams(SurveyAnswerResultModel surveyAnswerResultModel)
	{
		return surveyAnswerResultDao.queryByParams(surveyAnswerResultModel);
	}
	
	@Override
	public SurveyAnswerResultModel queryByBusinessIdAndNodeId(Long businessId, String nodeId)
	{
		SurveyAnswerResultModel surveyAnswerResultModel = new SurveyAnswerResultModel();
		surveyAnswerResultModel.setBusinessId(businessId);
		surveyAnswerResultModel.setNodeId(nodeId);
		List<SurveyAnswerResultModel> list = surveyAnswerResultDao.queryByParams(surveyAnswerResultModel);
		if (list == null)
		{
			return null;
		}
		return list.get(0);
	}
	
	@Override
	public List<SurveyAnswerResultModel> queryByBusinessId(Long businessId)
	{
		SurveyAnswerResultModel surveyAnswerResultModel = new SurveyAnswerResultModel();
		surveyAnswerResultModel.setBusinessId(businessId);
		return surveyAnswerResultDao.queryByParams(surveyAnswerResultModel);
	}
	
	@Override
	public int update(SurveyAnswerResultModel surveyAnswerResultModel)
	{
		return surveyAnswerResultDao.update(surveyAnswerResultModel);
	}
}
