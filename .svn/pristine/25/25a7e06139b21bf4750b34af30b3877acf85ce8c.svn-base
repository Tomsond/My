public class RedisServiceImpl implements CacheService
{
	
	private static final String DATASOURCENAME = SystemConstants.REDIS_DATASOURCE;
	
	@Override
	public boolean setCache(String key, String value, int save_time)
	{
		JedisClient jedisClient = new JedisClient(DATASOURCENAME);
		return jedisClient.set(key, value, save_time);
	}
	
	@Override
	public String getCache(String key)
	{
		JedisClient jedisClient = new JedisClient(DATASOURCENAME);
		return jedisClient.getString(key);
	}
	
}
