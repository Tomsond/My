public class RejectRecordServiceImpl implements RejectRecordService
{
	
	private RejectRecordDao rejectRecordDao;
	
	public void setRejectRecordDao(RejectRecordDao rejectRecordDao)
	{
		this.rejectRecordDao = rejectRecordDao;
	}
	
	@Override
	public List<RejectRecordModel> queryByBusinessId(Long businessId)
	{
		if (businessId == null || 0 == businessId)
		{
			return null;
		}
		RejectRecordModel rejectRecordModel = new RejectRecordModel();
		rejectRecordModel.setBusinessId(businessId);
		return rejectRecordDao.queryByParams(rejectRecordModel);
	}
	
	@Override
	public List<RejectRecordModel> queryByParams(RejectRecordModel rejectRecordModel)
	{
		Long businessId = rejectRecordModel.getBusinessId();
		if (businessId == null || 0 == businessId)
		{
			return null;
		}
		return rejectRecordDao.queryByParams(rejectRecordModel);
	}
	
	@Override
	public RejectRecordModel queryByBidAndStepAndStepChild(Long businessId, String step, String stepChildrenNode)
	{
		return rejectRecordDao.queryByBidAndStepAndStepChild(businessId, step, stepChildrenNode);
	}
	
	@Override
	public int updateById(RejectRecordModel rejectRecordModel)
	{
		return rejectRecordDao.updateById(rejectRecordModel);
	}
	
	@Override
	public long queryNotFixRecordCount(Long businessId)
	{
		return rejectRecordDao.queryNotFixRecordCount(businessId);
	}
}
