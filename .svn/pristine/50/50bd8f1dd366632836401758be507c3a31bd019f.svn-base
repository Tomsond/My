public class ISMPBaseDao extends BaseService
{
	
	public JdbcTemplate getJdbcTemplate()
	{
		return this.getJdbcTemplate(SystemConstants.DB_ISMP);
	}
	
	/**
	 * 大综台数据库对接源地址
	 * @return
	 */
	public JdbcTemplate getJdbcTemplateWork()
	{
		return this.getJdbcTemplate(SystemConstants.DB_ISMP_WORK);
	}
	/**
	 * 增加对接中台基础数据数据源配置
	 */
	public JdbcTemplate getJdbcTemplate(String id)
    {
        return  new JdbcTemplate(id);
    }
	
	/**
	 * @描述：获取数据库类型
	 * @作者：刘恺
	 * @时间：2016年8月25日 下午10:56:34
	 * @return
	 */
	public String getDbType()
	{
		return Configuration.getString(SystemConstants.CONFIG_KEY_SYSTEM_DBTYPE, SystemConstants.DB_TYPE_ORACLE);
	}

}
